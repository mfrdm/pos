div(ng-switch='vm.tab')
	div(ng-switch-when='tab-main')
		div(class="columns row")
			div(class="row colums")
				div(class="column")
					h2 Customer List
				// Create Account
				div(class="row column")
					div(class="column small-3")
						ul(class="menu")
							li
								a(class="button primary" ng-click="vm.ctrl.toggleCreateCustomerDiv()") 
									span(class="show-for-large") Create New Customer
									i(class="material-icons customIcon hide-for-large") add
					div(class="column small-9")
						ul(class="menu clearfix")
							li(class="float-right marginL15")
								<a class="button secondary" ng-click="vm.ctrl.toggleFilterDiv()"><span class="show-for-large">Filters</span><i class="material-icons customIcon hide-for-large">filter_list</i></a>
							li(class="float-right")
								ul(class="menu")
									li: label(class="paddingR15 show-for-large") Sort by
									li: select(class="" ng-model='vm.model.sorting.customerListOrder')
											option(value="firstname") Firstname
											option(value="lastname") Lastname
											option(value="email") Email
											option(value="phone") Phone
				div(class="column" ng-show='vm.model.dom.CreateCustomerDiv')
					form(class="borderT newBox row column" ng-submit='vm.ctrl.createNewCustomer()' confirm-submit ='Are you sure to Create New Customer')
						ul(class="menu vertical row column")
							li(class="marginB15")
								div(class="column small-12 paddingL0" ng-repeat='item in vm.model.form.newCustomerData.slice(0,3)')
									label {{item.label}}
										input(type="{{item.type}}" ng-model='vm.model.customer.newCustomerData[item.model]' ng-required="{{item.require}}" min='{{item.min}}' max='{{item.max}}')
								div(class="column small-12 paddingL0" ng-repeat='item in vm.model.form.newCustomerData.slice(3,4)')
									label {{item.label}}
										select(ng-model='vm.model.customer.newCustomerData[item.model]' ng-required="{{item.require}}" ng-options="key as value for (key , value) in {{item.options}}")
											option
								div(class="column small-12 paddingL0" ng-repeat='item in vm.model.form.newCustomerData.slice(4)')
									label {{item.label}}
										input(type="{{item.type}}" ng-model='vm.model.customer.newCustomerData[item.model]' ng-required="{{item.require}}" min='{{item.min}}' max='{{item.max}}' pattern='{{item.pattern}}')
						div(class="row column paddingT15")
							input(class="button" type="submit" value="Submit")
				div(class="column")
					div(class="borderT newBox row column")
						div(class="row column")
							form(ng-submit="vm.ctrl.searchFunc()")
								div(class="row column")
									label Phone/Email
										input(type="text" placeholder="Enter phone or email to search customer" ng-model='vm.model.search.input')
								div(ng-show="vm.model.dom.customerSearchResultDiv" class="marginB15")
									div(class="table-scroll")
										table(class="hover unstriped borderAll")
											thead
												tr
													th No
													th Last Name
													th First Name
													th Email
													th Created At				
											tbody
												tr(ng-repeat='result in vm.model.search.customerList | orderBy:vm.model.sorting.customerListOrder', ng-click='vm.ctrl.selectCustomerToViewProfile($index)' class="pointerCursor")
													td {{ $index + 1 }}
													td {{ result.lastname }}
													td {{ result.firstname }}
													td {{ result.email[0] }}
													td {{ result.createdAt | date: "shortTime" }}  -  {{ result.createdAt | date: "dd MMM yyyy" }}	
	div(ng-switch-when='tab-profile')
		div(class="columns row")
			div(class="column")
				h2 Customer Profile
			// Profile
			div(class="column")
				div(class="borderT newBox row column")
					table(class="striped borderAll")
						thead
							tr
								th(class='text-center') Fields
								th(class='text-center') Information
						tbody
							tr
								td(class='text-center') Lastname
								td(class='text-center') {{ vm.model.customer.profile.lastname}}
							tr
								td(class='text-center') Firstname
								td(class='text-center') {{ vm.model.customer.profile.firstname}}
							tr
								td(class='text-center') Gender
								td(class='text-center') {{ vm.model.customer.profile.gender}}
							tr
								td(class='text-center') Birthday
								td(class='text-center') {{ vm.model.customer.profile.birthday | date:'dd-MM-yyyy'}}
				div(class="row column")
					div(class='column small-12 paddingLR0')
						input(class="button warning" type="submit" value="Edit" ng-click='vm.ctrl.toEdit()')
						button(class="button float-right" ng-click='vm.ctrl.toMain()') Cancel
	div(ng-switch-when='tab-edit')
		div(class="columns row")
			div(class="row colums")
				div(class="column")
					h2 Edit Profile
				// Profile
				form(class="column" ng-submit='vm.ctrl.saveEdit()')
					div(class="borderT newBox row column")
						table(class="striped borderAll")
							thead
								tr
									th(class='text-center') Fields
									th(class='text-center') Information
							tbody
								tr
									td(class='text-center') Lastname
									td(class='text-center')
										input(type='text' value='{{ vm.model.customer.editProfile.lastname}}' ng-model='vm.model.customer.editProfile.lastname')
								tr
									td(class='text-center') Firstname
									td(class='text-center')
										input(type='text' value='{{ vm.model.customer.editProfile.firstname}}' ng-model='vm.model.customer.editProfile.firstname')
								tr
									td(class='text-center') Email
									td(class='text-center')
										input(type='email' value='{{ vm.model.customer.editProfile.email[0]}}' ng-model='vm.model.customer.editProfile.email')
								tr
									td(class='text-center') Phone
									td(class='text-center')
										input(type='text' value='{{ vm.model.customer.editProfile.phone[0]}}' ng-model='vm.model.customer.editProfile.phone')
					div(class="row column")
						div(class='column small-12 paddingLR0')
							input(class="button warning" type="submit" value="Save")
							button(class="button float-right" ng-click='vm.ctrl.toMain()') Cancel