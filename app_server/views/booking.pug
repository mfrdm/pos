extends layout
block content
	h2= data.look.title
	p: a(class="button", href="#", data-open="addFormModal") Add

	div(class="reveal" id="deleteFormModal" data-reveal="true")
		div(class="row")
			// TESTING DATA

			- var fullName = 'Pham A';
			- var customerId = 122;
			- var checkinTime = '2017-01-02 10:15:00';
			- var checkoutTime = '2017-01-02 10:15:00';
			- var storeAddr = '70 Chua Lang'; 
			- var productName = 1;
			- var status = 1;
			- var createdAt = '2017-01-02 8:15:00';
			- var updatedAt = '2017-01-02 8:15:00';
			- var message = 'Need a private place';
			- var d = [fullName, checkinTime, checkoutTime, storeAddr, productName, status, message];

			// END
			table
				thead
					tr
					- var tableHeaderNames = ['Full Name', 'Checkin', 'checkout', 'Store', 'Product', 'Status', 'Message'];
					- var twidth = ['15%', '10%', '10%', '10%', '10%'];
					- var columnNum = tableHeaderNames.length;
					- for (var i = 0; i < columnNum; i++)
						th(width=twidth[i])= tableHeaderNames[i]
				tbody
					tr
						- for (var i = 0; i < d.length; i++)
							td= d[i]

		div(class="row")
			div(class="button-group")
				a(class="button") Delete
				a(class="button float-right") Cancel

	div(class="reveal" id="addFormModal" data-reveal="true")
		form
			div(class="row")
				div(class="column small-3")
					label(for="costCategory", class="text-right middle") Category
				div(class="column small-9")
					- var catValues = [1,2,3];
					- var catNum = catValues.length;
					select(name="category", id="costCategory")
						- for (var i = 0; i < catNum; i++)
							option(value=catValues[i])= catValues[i]
			div(class="row")
				div(class="column small-3")
					label(for="firstName", class="text-right middle") First Name
				div(class="column small-9")
					input(type="text", placeholder="Cost amount", id="firstName")
			div(class="row")
				div(class="column small-3")
					label(for="lastName", class="text-right middle") Last Name
				div(class="column small-9")
					input(type="text", placeholder="Last name", id="lastName")
			div(class="row")
				div(class="column small-3")
					label(for="checkin", class="text-right middle") Checkin
				div(class="column small-9")
					input(type="text", id="checkin")
			div(class="row")
				div(class="column small-3")
					label(for="checkout", class="text-right middle") Checkout
				div(class="column small-9")
					input(type="text", id="checkout")
			div(class="row")
				div(class="column small-3")
					label(for="storeName", class="text-right middle") Store
				div(class="column small-9")
					input(type="text", id="storeName")
			div(class="row")
				div(class="column small-3")
					label(for="product", class="text-right middle") Product
				div(class="column small-9")
					input(type="text", id="product")
			div(class="row")
				div(class="column small-3")
					label(for="bookingStatus", class="text-right middle") Status
				div(class="column small-9")
					input(type="text", id="bookingStatus")
			div(class="row")
				div(class="column small-3")
					label(for="message", class="text-right middle") Message
				div(class="column small-9")
					input(type="text", id="message")
			div(class="row")
				div(class="button-group")
					a(class="button") Create
					a(class="button float-right") Cancel									
	table
		thead
			tr
				- var tableHeaderNames = ['Full Name', 'Checkin', 'checkout', 'Store', 'Product', 'Status', 'Message', 'Edit', 'Delete'];
				- var twidth = ['15%', '10%', '10%', '10%', '10%', '10%', '10%', '10%', '10%'];
				- var d = data.data;
				- var key = ['fullName', 'checkinTime', 'checkoutTime', 'storeAddr', 'productName', 'status', 'message'];
				- var rowNum = d.length;
				- var columnNum = tableHeaderNames.length;
				- for (var i = 0; i < columnNum; i++)
					th(width=twidth[i])= tableHeaderNames[i]
		tbody
			- for (var i = 0; i < rowNum; i++)
				tr
					- for (var j = 0; j < key.length; j++)
						td= d[i][key[j]]
					td: a(class="button warning", data-open="addFormModal") Edit
					td: a(class="button alert", data-open="deleteFormModal") Delete	