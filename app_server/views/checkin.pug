extends layout
block content
	div(ng-app='checkinApp' ng-controller='checkinCtrl as checkin')
		div(class='checkin-step')
			div(class="input-group")
				input(class="input-group-field" type="text")
				div(class="input-group-button")
					input(type="submit" class="button" value="Submit")
			label Filter
			select(id="select" required ng-model='order')
				option(value="name") Name
				option(value="time") Time
				option(value="service") Service
			table
				thead
					tr
						th(width='100') Stt
						th(width='200') Name
						th Date
						th Time
						th Service
						th(width='100') Checkout
						th(width='100') Edit
				tbody
					tr(ng-repeat="user in checkin.userList")
						td {{$index + 1}}
						td {{user.customers.firstname}}
						td {{user.checkinTime | date:'dd/MM/yyyy'}}
						td {{user.checkinTime | date: 'shortTime'}}
						td {{user.orderline[0].productName}}
