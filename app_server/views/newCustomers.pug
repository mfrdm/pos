div(class="row columns")
	div(class="column small-12")
		h2 Customer List
	// Create Account
	div(class="row column")
		div(class="column small-3")
			ul(class="menu")
				li
					a(class="button" ng-click="vm.ctrl.toggleCreateCustomerDiv()") 
						span(class="show-for-large") Create an account
						i(class="material-icons customIcon hide-for-large") add
		//div(class="column small-9")
			ul(class="menu clearfix")
				li(class="float-right marginL15")
				<a class="button secondary" ng-click="vm.ctrl.toggleFilterDiv()"><span class="show-for-large">Filters</span><i class="material-icons customIcon hide-for-large">filter_list</i></a>
				li(class="float-right")
					ul(class="menu")
						li: label(class="paddingR15 show-for-large") Sort by
						li: select(class="" ng-model='vm.model.sorting.customerListOrder')
							option(value="firstname") Firstname
							option(value="lastname") Lastname
							option(value="email") Email
							option(value="phone") Phone
	div(class="column" ng-show='vm.model.dom.CreateCustomerDiv')
		form(class="borderT newBox row column" ng-submit='vm.ctrl.confirmCreateNewCustomer()')
			div(class="row column")
				div(class="column small-12 large-4")
					label Lastname
						input(type="text" ng-model='vm.model.newCustomer.lastname')
				div(class="column small-12 large-4")
					label Middle name
						input(type="text" ng-model='vm.model.newCustomer.middlename')
				div(class="column small-12 large-4")
					label Firstname
						input(type="text" ng-model='vm.model.newCustomer.firstname')
			div(class=" row column")
				div(class="column small-12 large-6")
					label Gender
						select(ng-model='vm.model.newCustomer.gender' ng-options="key as value for (key , value) in {1: 'Male',2: 'Female',3: 'Others'}")
				div(class="column small-12 large-6")
					label Birthday
						input(type="date" ng-model='vm.model.newCustomer.birthday')
			div(class=" row column")
				div(class="column small-12 large-6")
					label Email
						input(type="text" ng-model='vm.model.newCustomer.email[0]')
				div(class="column small-12 large-6")

					label Phone
						input(type="text" ng-model='vm.model.newCustomer.phone[0]')
			div(class=" row column")
				div(class="column small-12 large-6")
					label School/ University
						select(ng-model='vm.model.newCustomer.edu.school' ng-options="val for val in vm.model.customer.selectSchools")
				div(class="column small-12 large-6")
					label Other Schools
						input(type="text" ng-model='vm.model.customer.otherSchool')

			div(class="row column paddingT15 paddingLR15")
				input(class="button" type="submit" value="Submit")
				a(class="button float-right" ng-click="") Cancel


// CONFIRM CREATE A CUSTOMER
div(ng-show='vm.model.dom.confirmCreateDiv' id='checkoutDiv')
	div(class='row column paddingT15')
		div(class='row coumn header-invoice-img text-center')
			img(src='/img/logo.png')
		div(class='row coumn header-invoice text-center')
			h4 Địa chỉ: Số nhà 70, ngách 23, ngõ 82, Chùa Láng, Láng Thượng, Đống Đa, Hà Nội
			h4 Liên hệ: 097 785 55 94
			h4 Website: greenspace-cw.com
		form(class="row column small-12 large-6 large-push-3 invoice" ng-submit='vm.ctrl.createNewCustomer()')
			div(class='priceSection')
				div(class="row column")
					div(class='row column paddingB15')
						div(class='column small-6 text-right')
							p Fullname
						div(class='column small-6 greenBorder')
							p {{ vm.model.newCustomer.lastname}} {{ vm.model.newCustomer.middlename}} {{ vm.model.newCustomer.firstname}}
					div(class='row column paddingB15')
						div(class='column small-6 text-right')
							p Gender
						div(class='column small-6 greenBorder')
							p {{ vm.model.customer.genders[vm.model.newCustomer.gender]}}
					div(class='row column paddingB15')
						div(class='column small-6 text-right')
							p Birthday
						div(class='column small-6 greenBorder')
							p {{ vm.model.newCustomer.birthday | date:'dd/MM/yyyy'}}
					div(class='row column paddingB15')
						div(class='column small-6 text-right')
							p Email
						div(class='column small-6 greenBorder')
							p {{ vm.model.newCustomer.email[0]}}
					div(class='row column paddingB15')
						div(class='column small-6 text-right')
							p Phone
						div(class='column small-6 greenBorder')
							p {{ vm.model.newCustomer.phone[0]}}
					div(class='row column paddingB15')
						div(class='column small-6 text-right')
							p School
						div(class='column small-6 greenBorder')
							p {{ vm.model.newCustomer.edu.school}}
					div(class='row column paddingB15')
						div(class='column small-6 text-right')
							p Job
						div(class='column small-6 greenBorder')
							p {{ vm.model.customer.selectCustomerTitleConvert[vm.model.newCustomer.edu.title]}}
					
			div(class="row column")
				div(class='column small-12 large-paddingLR0')
					input(class="paddingL15 button primary" type="submit" value="Confirm")
					button(class=" paddingR15 button float-right secondary" ng-click='vm.ctrl.reset(); $event.preventDefault()') Cancel

//Announce create successfull
div(id='announceCreateSuccessfull' class='reveal small column row' data-reveal data-animation-in="slide-in-down fast")
	div(class=' text-center paddingTB15 marginB15')
		h5 Bạn đã tạo tài khoản thành công!
	button(class="close-button"  data-close='' aria-label="Close modal" type="button")
			span(aria-hidden="true") &times;

//Announce create fail
div(id='announceCreateFail' class='reveal small column row' data-reveal data-animation-in="slide-in-down fast")
	div(class=' text-center paddingTB15 marginB15')
		h5 Bạn đã tạo tài khoản không thành công. Hãy thử lại!
	button(class="close-button"  data-close='' aria-label="Close modal" type="button")
			span(aria-hidden="true") &times;