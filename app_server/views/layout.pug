doctype html
html(ng-app='posApp')
	// pug mixin library
	include ../../libs/pug/libs
	head
		meta(charset="utf-8")
		// Let browser know website is optimized for mobile
		meta(name='viewport', content='width=device-width, initial-scale=1.0')

		title= data.look.title
		link(rel="stylesheet", href='/vendor/css/foundation.min.css')
		link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
		link(rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
		link(rel="stylesheet", href='/css/test.css')
		if (data.look.css && data.look.css[0])
			- var cssFileNum = data.look.css.length
			- for (var i = 0; i < cssFileNum; i++)
				link(rel="stylesheet", href='/css/' + data.look.css[i] + '.css')
	body
		div(class='background')
		div(class='headbar')
			div(class='row')
				div(class='small-12 medium-3 large-2 columns header')
					i(class="fa fa-globe fa-lg")
					h5 Green Space
				div(class='small-6 medium-2 medium-offset-1 columns')
					p 20 People are waiting
				div(class='small-6 medium-2 columns')
					p 20 People are waiting
				div(class='small-6 medium-2 columns')
					p 20 People are waiting
				div(class='small-6 medium-3 columns')
					p 20 People are waiting
		div(class='sidebar small-12 medium-3 large-2 columns')
			- var menuNames = ['Checkin', 'Checkout','Booking','Customer Management', 'Assets', 'BI','HR', 'Revenue', 'Cost', 'Store','Product', 'Attendance','Profile', 'Login'];
			- var menuLinks = ['#!/checkin', '#!/checkout', '#!/bookings', '#!/customers','#!/assets', '#!/bi', '#!/staff', '','#!/fin/costs', '#!/stores','#!/products', '#!/attendance', '#!/profile', '#!/login'];
			- for (var i=0; i<menuNames.length; i++)
				a(href=menuLinks[i])
					div(class='small-12 columns')
						h5=menuNames[i]
		div(class='content small-12 medium-9 large-10 columns')
			ng-view
			block content


		script(src="/vendor/js/angular.min.js")
		script(src='/vendor/js/angular-route.min.js')
		script(src='/vendor/js/checklist-model.min.js')
		script(src="/vendor/js/jquery-3.1.1.min.js")
		script(src="/vendor/js/what-input.js")
		script(src="/vendor/js/foundation.min.js")
		if (data.look.js && data.look.js[0])
			- var jsFileNum = data.look.js.length
			- for (var i = 0; i < jsFileNum; i++)
				script(src="/app_client/" + data.look.js[i])