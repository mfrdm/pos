div(class='row')
	div(class='columns small-12 medium-4 medium-offset-4')
		table
			thead
				tr
					th Title
					th Details
			tbody(class='customer-detail')
				tr
					td Name
					td {{vm.order.customers.firstname}} {{vm.order.customers.lastname}}
				tr
					td Products
					td
						p(ng-repeat='product in vm.order.orderline') {{product.productName}}
				tr
					td Checkin Date
					td {{vm.order.checkinTime | date: 'dd/MM/yyyy'}}
				tr
					td Checkin Time
					td {{vm.order.checkinTime | date: 'shortTime'}}
				tr
					td Checkout Time
					td {{vm.outTime | date: 'shortTime'}}
				tr
					td Total money
					td {{vm.order.service}}
div(class='row')
	div(class='columns small-2 medium-1 medium-offset-4')
		button(type="button" class="button" ng-click='vm.checkout()') Checkout
	div(class='columns small-2 medium-6')
		a(href='/#!/')
			button(type="button" class="button") Cancel