div(ng-switch='vm.tab')
	div(ng-switch-when='tab-main')
		div(class="columns row")
			div(class="row colums")
				div(class="column")
					h2 Add Store
				// Create New Store *********************************//
				div(class="column")
					div(class="borderT newBox row column")
						form(class='row column')
							div(class='column small-12 paddingLR0')
								label Store name
									input(type='text' ng-model='vm.name' required)
							div(class='column small-12 paddingLR0')
								label Manager Fullname
									input(required type='text' ng-model='vm.managerFullname')
							div(class='column small-12 paddingLR0')
								label Contact Email
									input(required type='email' ng-model='vm.contactEmail')
							div(class='column small-12 paddingLR0')
								label Contact Phone
									input(required type='number' ng-model='vm.contactPhone')
						div(class="row column")
							div(class='column small-12 paddingLR0')
								input(class="button" type="submit" value="Create" ng-click='vm.createNewStore()')
								button(class="button float-right") Cancel
			div(class="row colums")
				div(class="column")
					h2 Store List
				
				div(class="row column")
					div(class="column small-12")
						ul(class="menu clearfix")
							li(class="float-right marginL15")
								<a class="button secondary" ng-click="vm.toggleFilterDiv()"><span class="show-for-large">Filters</span><i class="material-icons customIcon hide-for-large">filter_list</i></a>
							li(class="float-right")
								ul(class="menu")
									li: label(class="paddingR15 show-for-large") Sort by
									li: select(class="")
											option(value="name") Name
											option(value="checkinTime") Check-in time
											option(value="status") Status
				// Search Stores by name *********************************//
				div(class="column")
					div(class="borderT newBox row column")
						div(class="row column")
							form(ng-submit="vm.searchFunc()")
								div(class="row column")
									label Name
										input(type="text" placeholder="Enter name to search stores" ng-model='vm.searchInput')
								div(ng-show="vm.look.storesSearchResultDiv" class="marginB15")
									div(class="table-scroll")
										table(class="hover unstriped borderAll")
											thead
												tr
													th No
													th Name
													th Manager
													th Contact Email
													th Contact Phone
											tbody
												tr(ng-repeat='result in vm.searchResult.stores', ng-click='vm.selectStoreToViewProfile($index)' class="pointerCursor")
													td {{ $index + 1 }}
													td {{ result.name }}
													td {{ result.managerFullname }}
													td {{ result.contact.email }}
													td {{ result.contact.phone }}
		// List All Stores *********************************//
		div(class='row column')
			div(class="column small-12 paddingLR0")
				div(class="table-scroll newBox")
					table(class="borderAll")
						thead
							tr
								th No
								th Name
								th Manager
								th Contact Email
								th Contact Phone
								th Edit
						tbody
							tr(ng-repeat='item in vm.look.allStores')
								td {{ $index + 1 }}
								td {{ item.name }}
								td {{ item.managerFullname }}
								td {{ item.contact.email }}
								td {{ item.contact.phone }}
								td
									button(type="button" class="alert button" ng-click='vm.selectStoreInListToViewProfile($index)') Edit
	div(ng-switch-when='tab-profile')
		div(class="columns row")
			div(class="row colums")
				div(class="column")
					h2 Store Details
				// Store Detail *********************************//
				div(class="column")
					div(class="borderT newBox row column")
						table(class="striped borderAll")
							thead
								tr
									th(class='text-center') Fields
									th(class='text-center') Information
							tbody
								tr
									th(class='text-center') Name
									th(class='text-center') {{vm.store.name}}
								tr
									th(class='text-center') Manager
									th(class='text-center') {{vm.store.managerFullname}}
								tr
									th(class='text-center') Contact Email
									th(class='text-center') {{vm.store.contact.email}}
								tr
									th(class='text-center') Contact Phone
									th(class='text-center') {{vm.store.contact.phone}}
					div(class="row column")
						div(class='column small-12 paddingLR0')
							input(class="button warning" type="submit" value="Edit" ng-click='vm.toEdit()')
							button(class="button float-right" ng-click='vm.toMain()') Cancel
	div(ng-switch-when='tab-edit')
		div(class="columns row")
			div(class="row colums")
				div(class="column")
					h2 Edit Store
				// Store Edit *********************************//
				div(class="column")
					div(class="borderT newBox row column")
						table(class="striped borderAll")
							thead
								tr
									th(class='text-center') Fields
									th(class='text-center') Information
							tbody
								tbody
								tr
									th(class='text-center') Name
									th(class='text-center')
										input(type='text' ng-model='vm.store.name')
								tr
									th(class='text-center') Manager
									th(class='text-center')
										input(type='text' ng-model='vm.store.managerFullname')
								tr
									th(class='text-center') Contact Email
									th(class='text-center')
										input(type='text' ng-model='vm.store.contact.email')
								tr
									th(class='text-center') Contact Phone
									th(class='text-center')
										input(type='text' ng-model='vm.store.contact.phone')
					div(class="row column")
						div(class='column small-12 paddingLR0')
							input(class="button warning" type="submit" value="Save" ng-click='vm.saveEdit()')
							button(class="button float-right" ng-click='vm.toMain()') Cancel