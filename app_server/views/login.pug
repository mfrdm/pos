doctype html
html
	head
		meta(charset="utf-8")
		// Let browser know website is optimized for mobile
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel="stylesheet", href='/vendor/css/foundation.min.css')
		link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
		link(rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
		link(rel="stylesheet", href='/css/test.css')
	body
		div(id='login-bg')
		div(class='row')
			div(class='columns small-12 medium-4 medium-offset-4')
				div(class='content')
					h1(class='title') Green Space POS
					h3(class='description') Just come and get things done
		div(class='row')
			div(class='columns small-12 medium-4 medium-offset-4')
				div(class='button-google')
					p Login/Sign Up by Google +
		div(class='row')
			div(class='columns small-12 medium-4 medium-offset-4')
				div(class='button-facebook')
					p Login/Sign Up by Facebook
		div(class='row')
			a(data-open="exampleModal1" id='local-btn')
				div(class='columns small-12 medium-4 medium-offset-4')
					div(class='button-local')
						p Login/Sign Up by password
		div(class="reveal" id="exampleModal1" data-reveal)
			button(class="close-button" data-close aria-label="Close modal" type="button")
				span(aria-hidden="true") &times;
			ul(class='tabs' data-tabs id='tabs')
				li(class="tabs-title is-active")
					a(href="#panel1" aria-selected="true")
						span Login
				li(class="tabs-title")
					a(href='#panel2')
						span Signup
			div(class='tabs-content' data-tabs-content='tabs')
				div(class="tabs-panel is-active" id="panel1")
					//- Login Form ///////////////////////////////////////////
					form
						div(class='row')
							div(class='small-12 columns')
								div(class='row')
									div(class='small-3 columns')
										label(for='right-label' class='right inline') Phone/Email
									div(class='small-9 columns')
										input(type="text" id="right-label" placeholder="Phone/Email")
							div(class='small-12 columns')
								div(class='row')
									div(class='small-3 columns')
										label(for='right-label' class='right inline') Password
									div(class='small-9 columns')
										input(type="password" id="right-label" placeholder="Password")
							div(class='small-2 small-offset-5 columns' id='login-btn')
								a(href="#" class="small button") Login
				div(class="tabs-panel" id="panel2")
					//- Sign up form /////////////////////////////////////////
					form
						div(class='row')
							div(class='small-12 columns')
								div(class='row')
									div(class='small-3 columns')
										label(for='right-label' class='right inline') Firstname
									div(class='small-9 columns')
										input(type="text" id="right-label" placeholder="Firstname")
							div(class='small-12 columns')
								div(class='row')
									div(class='small-3 columns')
										label(for='right-label' class='right inline') Lastname
									div(class='small-9 columns')
										input(type="text" id="right-label" placeholder="Lastname")
							div(class='small-12 columns')
								div(class='row')
									div(class='small-3 columns')
										label(for='right-label' class='right inline') Phone Number
									div(class='small-9 columns')
										input(type="number" id="right-label" placeholder="Phone Number")
							div(class='small-12 columns')
								div(class='row')
									div(class='small-3 columns')
										label(for='right-label' class='right inline') Password
									div(class='small-9 columns')
										input(type="password" id="right-label" placeholder="Password")
							div(class='small-2 small-offset-5 columns' id='login-btn')
								a(href="#" class="small button") Signup

		script(src="/vendor/js/angular.min.js")
		script(src='/vendor/js/angular-route.min.js')
		script(src='/vendor/js/checklist-model.min.js')
		script(src="/vendor/js/jquery-3.1.1.min.js")
		script(src="/vendor/js/what-input.js")
		script(src="/vendor/js/foundation.min.js")
		script(src='/vendor/js/foundation.reveal.js')
		script(src='/js/test.js')